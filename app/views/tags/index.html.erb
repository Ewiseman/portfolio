<div class="section-big">
  <div class="container">
    <div class="col-md-12 col-sm-12 col-xs-12>

      <div class="ibox-content">
        <%= render 'notices' %>
        <div class="center_div">
          <div class="row">
            <h3 class="table-labels">Tags</h3>

          </div>
          <div class="row-table ">
            <div class="table-responsive">
              <table data-toggle="table" data-pagination="true"  class="table table-striped table-bordered"'>
                <thead class="thead-light">
                <tr>
                  <th data-sortable="true"> Tag</th>
                  <th data-sortable="true"> Count</th>
                  <th data-sortable="true"> New Tag</th>
                </tr>
              </thead>
              <tbody>
                <% @tags.each do |tag| %>
                  <tr>
                    <td>
                      <%= link_to tag.name, tag_path(tag) %>
                    </td>
                    <td>
                      <%= number_with_delimiter(tag.participants.count) %>
                    </td>
                    <td>
                    <% if tag.new_tag.present? %>
                      <%= tag.new_tag %> <%= link_to "(edit)", edit_tag_path(tag) %>
                    <% else %>
                      <%= link_to "Edit Tag", edit_tag_path(tag) %>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

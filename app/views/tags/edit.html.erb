<div class="container">
  <br>
  <br>
  <%= form_for @tag do |f| %>
    <form>
      <div class="row">
        <div class="col-md-6 clear">
          <%= f.select :new_tag, Tag::PROGRAMS, {include_blank: ""}, {class: "clear form-control safari-dropdown"} %>
          </div>
          <div class="col-md-6 clear">
            <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
      <br>
      <hr>
      <br>
      <br>
      <%= link_to "Delete Tag", @tag, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Tag?  This cannot be un-done.' } %>
    </form>
  <% end %>
</div>

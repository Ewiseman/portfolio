<div class="section-big">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@sprint, @task], remote: true do |f| %>
      <form>
        <div class="col-md-12 radio-button-box">
          <p class="radio-button-labels">Status</p>
          <div class="row">
            <div class="col-md-2 col-sm-4 col-xs-4 form-group client-files-form-inner-radio-buttons">
              <label class="radio-inline">
                <%= f.radio_button :status, "to_do" %> Todo
              </label>
            </div>

            <div class="col-md-2 col-sm-4 col-xs-4 form-group client-files-form-inner-radio-buttons">
              <label class="radio-inline">
                <%= f.radio_button :status, "complete" %> Complete
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-12 col-xs-12 form-spacer">
            <label class="sr-only">Task Category</label>
            <%= f.select :category, Task::CATEGORY, {include_blank: "Category"}, {class: "clear form-control safari-dropdown"} %>
            <br>
          </div>

          <div class="col-md-12 col-sm-12 col-xs-12 form-spacer">
            <label class="sr-only">Client name</label>
            <%= f.text_field :task, class: "clear form-control input-sm", placeholder: "Task" %>
            <br>
          </div>

          <div class="col-md-6 clear">
            <%= f.select :day, Task::DAY, {include_blank: "Day"}, {class: "clear form-control safari-dropdown"} %>
            <br>
          </div>

          <div class="col-md-6 col-sm-12 col-xs-12 form-spacer">
            <label class="sr-only">Client size</label>
            <%= f.select :value, Task::VALUE, {include_blank: "Value"}, {class: "clear form-control safari-dropdown"} %>
              <br>
          </div>

          <div class="col-md-6 col-sm-12 col-xs-12">
            <%= f.text_field :ranks, class: "clear form-control input-sm", placeholder: "Rank" %>

          </div>
        </div>
        <br>
        <div class="modal-footer">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </form>
    <% end %>

  </div>
</div>
